{
  "name": "johnnystore_api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "copy_sql_file": "cp src/db/johnny.sql dist/db/",
    "build": "rm -rf dist && tsc && npm run copy_sql_file",
    "prod:migrate": "node dist/db/mysql migrate",
    "dev:migrate": "ts-node src/db/mysql migrate",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "test": "npm run dev:migrate && jest --coverage --testTimeout=10000",
    "coverage": "coveralls < coverage/lcov.info"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "/dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ocranbillions/johnnystore_api.git"
  },
  "keywords": [],
  "author": "Samuel Ocran",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ocranbillions/johnnystore_api/issues"
  },
  "homepage": "https://github.com/ocranbillions/johnnystore_api#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.8",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/mysql": "^2.15.17",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
